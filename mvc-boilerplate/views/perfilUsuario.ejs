<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Perfil</title>
  <link rel="stylesheet" href="/css/perfilUsuario.css">
</head>
<body>
  <header class="topo">
    <!-- Cabeçalho fixo com busca e ícones -->
    <div class="barra-superior">
      <input type="text" placeholder="Buscar receitas...">
      <div class="icones">
        <i class="icone-mensagem"></i>
        <i class="icone-usuario"></i>
      </div>
    </div>
  </header>

  <main>
    <section class="perfil-usuario">
      <div class="foto-perfil"></div>
      <h2><%= usuario.name %></h2>
    </section>

    <section class="titulo-pastas">
      <h3>Suas pastas</h3>
    </section>

    <section class="grid-pastas">
      <% pastas.forEach(pasta => { %>
        <a href="/folders/pastas/<%= pasta.id %>" class="card-pasta">
  <div class="preview-receitas">
    <% if (pasta.receitasPreview && pasta.receitasPreview.length > 0) { %>
      <% pasta.receitasPreview.slice(0, 3).forEach(receita => { %>
        <img src="<%= receita.image %>" alt="Imagem da receita">
      <% }) %>
    <% } else { %>
      <p>Sem receitas</p>
    <% } %>
  </div>
  <h3><%= pasta.name %></h3>
</a>
      <% }) %>
    </section>
  </main>
</body>
</html>

